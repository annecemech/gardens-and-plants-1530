<p style="color: green"><%= notice %></p>

<div class="banner mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.banner_url %>);">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for [@garden, @plant] do |f| %>
        <%= f.input :name %>
        <%= f.input :image_url %>
        <%= f.submit "Add plant", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
  <div class="cards my-4">
    <% @garden.plants.each do |plant| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= plant.image_url %>)">
        <%= link_to plant_path(plant), data: {turbo_method: :delete, turbo_confirm: "Really?????"} do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
        <%= plant.name %>
      </div>
    <% end %>
  </div>

</div>
